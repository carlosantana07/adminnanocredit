{% extends 'partials/layout-vertical.html.twig' %}

{% block title %}Apex Mixed Charts
{% endblock %}

{% block css %}{% endblock %}

{% block pagetitle %}
	{{ include('partials/page-title.html.twig', { sub_title: 'Apex', page_title: 'Mixed Charts' }) }}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-xl-6">
			<div class="card">
				<div class="card-body">
					<h4 class="header-title">Line & Column Chart</h4>
					<div dir="ltr">
						<div id="line-column-mixed" class="apex-charts" data-colors="#4254ba,#17a497"></div>
					</div>
				</div>
				<!-- end card body-->
			</div>
			<!-- end card -->
		</div>
		<!-- end col-->

		<div class="col-xl-6">
			<div class="card">
				<div class="card-body">
					<h4 class="header-title">Multiple Y-Axis Chart</h4>
					<div dir="ltr">
						<div id="multiple-yaxis-mixed" class="apex-charts" data-colors="#4254ba,#39afd1,#fa5c7c"></div>
					</div>
				</div>
				<!-- end card body-->
			</div>
			<!-- end card -->
		</div>
		<!-- end col-->
	</div>
	<!-- end row-->

	<div class="row">
		<div class="col-xl-6">
			<div class="card">
				<div class="card-body">
					<h4 class="header-title">Line & Area Chart</h4>
					<div dir="ltr">
						<div id="line-area-mixed" class="apex-charts" data-colors="#17a497,#fa5c7c"></div>
					</div>
				</div>
				<!-- end card body-->
			</div>
			<!-- end card -->
		</div>
		<!-- end col-->

		<div class="col-xl-6">
			<div class="card">
				<div class="card-body">
					<h4 class="header-title">Line, Column & Area Chart</h4>
					<div dir="ltr">
						<div id="all-mixed" class="apex-charts" data-colors="#4254ba,#39afd1,#fa5c7c"></div>
					</div>
				</div>
				<!-- end card body-->
			</div>
			<!-- end card -->
		</div>
		<!-- end col-->
	</div>
	<!-- end row-->

{% endblock %}

{% block javascript %}
<!-- Apex Charts js -->
<script src="/vendor/apexcharts/apexcharts.min.js"></script>

<!-- Apex Chart Mixed Demo js -->
<script src="/js/pages/demo.apex-mixed.js"></script>
{% endblock %}
